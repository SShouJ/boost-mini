/* components/activityModal/activityModal.wxss */
.activity-item{
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow:10rpx 0px 10rpx 0px #c2c2c2;
}

.activity-item .activity-info{
  padding: 23rpx 28rpx;
}

.activity-item .activity-info .activity-duration{
  display: flex;
  align-items: center;
}

.activity-item .operator{
  padding: 23rpx 28rpx;
}

.activity-item .operator .btn{
  padding: 25rpx 71rpx;
  border-radius:40rpx;
}

.spot{
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
}

.flex-between{
  display: flex;
  align-items: center;
  justify-content: space-between;
}

/* 活动头像 */
.activity-img{
  width: 100%;
  height: 300rpx;
  border: 1px solid #ccc;
}

.mt-5{
  margin-top: 10rpx;
}

.fs-14{
  font-size: 28rpx;
}

.fs-12{
  font-size: 24rpx;
}

.mt-15{
  margin-top: 30rpx;
}

.bg-green{
  background: #20c16a;
}

.bg-red{
  background: #ff5a00;
}

.cl-grey{
  color: #c2c2c2;
}

.fw-600{
  font-weight: 600;
}

.cl-fff{
  color: #fff;
}

.ml-5{
  margin-left: 10rpx;
}


.hr{
  height: 4rpx;
  background: #f7f7f7;
}

.them-light{
  background: #ff5a00;
  color: #fff;
}

.them-low{
  background: rgba(204, 204, 204, 0.219);
  color: #ccc;
}