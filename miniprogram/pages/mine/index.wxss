.warp{
  width: 710rpx;
  margin: 0 auto;
}
body{
  margin: 0 auto;
  font-size: 30rpx;
}
.mb-20{
  margin-bottom: 20rpx;
}
.box-info{
  padding: 20rpx 0rpx  20rpx 20rpx;
  display: flex;
  flex-direction: column;
  border-radius:10rpx
}
.tc-hui{
  color: #8a8888;
}
.box-scan{
  display: flex;
  justify-content: flex-end
}
.box-scan .img-scan{
  margin-left: 20rpx;
  width: 45rpx;
  height: 45rpx;
  object-fit: cover;
}
.box-userinfo{
  margin: 24rpx 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-bottom: 50rpx;
}
.box-rigth{
  display: flex;
  align-items: center;
  justify-content: space-between;
  /* border: 1rpx solid; */
}
.box-rigth .img-avatar{
  width: 180rpx;
  height: 180rpx;
  border-radius: 120rpx;
  border: 5rpx solid white;
}
#btn-username{
  width: 180rpx;
  padding: 0rpx 0rpx;
    font-size: 45rpx;
    font-weight: 700;
    color: white;
    margin-left: 40rpx;
  }
  .box-integral{
    padding: 10rpx 0rpx 10rpx 20rpx;
    /* border: 1rpx solid; */
    border-radius: 20rpx 0 0 20rpx;
    color:white;
    background-color: rgba(248, 178, 178, 0.3); 
    display: flex;
    align-items: center;
  }
  .icon-info{
    width: 30rpx;
    height: 30rpx;
  }
  .fs-24{
    font-size: 24rpx;
  }
  .box-nav{
    background-color: white;
    border-radius: 10rpx;
    box-sizing: border-box;
    padding:0 25rpx;
  }
  .nav-item{
    padding: 20rpx 0;
    display: flex;
    align-items: center;
    border-bottom:1rpx solid #f6f6f6;
  }
  .nav-text{
    
    margin:  0 50rpx;
  }
  .nav-img{
    vertical-align: bottom;
    width: 50rpx;
    height: 50rpx;
    
  }
  .activityInfo{
    box-sizing: border-box;
    padding: 40rpx;
    background-color: white;   
    border-radius:10rpx ;
    display: flex;
    justify-content:space-around;
  }
  .actInfo-item{
    display: flex;

  }
  
  .box-actinfo{
    display: flex;
    flex-direction: column;
    align-items: center
  }
  .Vertical{
    margin-left: 100rpx;
    border: 1rpx solid #cccccc;
  }
.box-feet{
  margin: 50rpx;
  display: flex;
  justify-content: center;
}
  .text-feet{
    padding: 0 10rpx;
    font-size: 24rpx;
    color: #928f8f;
  }
  .bor{
    border-left:1rpx solid #a7a5a5 ;
    border-right:1rpx solid #a7a5a5;
  }
  .fw-6{
    font-weight: 600;
  }
  
  .fooder-top{
    display: flex;
    justify-content: center;
  }
  .fs-20{
    font-size: 20rpx;
    color:#a7a5a5;
