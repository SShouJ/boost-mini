.body {
  width: 100vw;
  background-color: #f6f6f6;
  font-size: 30rpx;
  box-sizing: border-box;
}

.header {
  width: 100%;
}

.header .prize {
  width: 100%;
  background-color: #fff;
  border-radius: 0 0 30rpx 30rpx;
  position: relative;
}

.header .prize .prize_img image {
  width: 100%;
  border-radius: 0 0 30rpx 30rpx;
}

.header .prize .prize_img-prompt_box {
  width: 100%;
  height: 100rpx;
  border-radius: 0 0 30rpx 30rpx;
  background-image: url('https://636c-cloud1-7ge7nl2m42cee9e9-1316264853.tcb.qcloud.la/bgd-integral.png?sign=dfc4d8425714b2b300a930f4d0842f15&t=1675416464');
  background-size: 100% 100%;
  position: absolute;
  bottom: 0rpx;
  box-sizing: border-box;
  padding: 20rpx;
}

.header .prize .prize_img-prompt_box .position {
  position: relative;
}

.header .prize .prize_img-prompt_box .position .left_text {
  position: absolute;
  top: -14rpx;
  left: 10rpx;
  color: #9e461e;
}

.header .prize .prize_img-prompt_box .position .right_text {
  position: absolute;
  top: 6rpx;
  right: 90rpx;
  color: #fff;
  font-size: 50rpx;
}

.header .prize_name {
  box-sizing: border-box;
  padding: 20rpx;
  background-color: #fff;
}

.header .prize_name .prize_title {
  font-size: 34rpx;
}

.header .left .integral {
  font-size: 32rpx;
}

.header .left .original_price {
  color: #9b9b9b;
  text-decoration: line-through;
  font-size: 26rpx;
}

.container {
  width: 100%;
}

.container .container_exchange {
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
  background-color: #fff;
}

.container .container_exchange .title {
  font-size: 34rpx;
}

.container .exchange_describe .item {
  text-align: center;
  color: #89898b;
}

.container .exchange_describe .x {
  color: #ccc;
  margin-top: 30rpx;
}

.container .exchange_describe .item image {
  width: 100rpx;
  height: 100rpx;
}

.container .prize_description {
  width: 100%;
  background-color: #fff;
  box-sizing: border-box;
  padding: 20rpx;
}

.container .prize_description .prize_description_title {
  font-size: 34rpx;
}

.container .prize_description .description {
  margin-top: 40rpx;
}

.footer {
  height: 100rpx;
  box-sizing: border-box;
  padding: 14rpx 20rpx;
  background-color: #fff;
}

.footer .exchange {
  width: 100%;
  padding: 20rpx 20rpx;
  background-color: #73aaff;
  color: #fff;
  font-size: 36rpx;
  border-radius: 50rpx;
}