.body {
  width: 100vw;
  height: 100vh;
  background-color: #F8F8F8;
  font-size: 30rpx;
  color: rgb(224, 19, 19);
}

.body .header {
  width: 100%;
  color: #fff;
  background-repeat: no-repeat;
  background-size: 100%;
}

.body .header .userinfo .text,
.body .header .userinfo .login-name {
  font-size: 40rpx;
  font-weight: 700;
  padding: 30rpx 0 0 0;
}

.body .header .dialog_box {
  border: 1rpx solid #c99d8d70;
  box-sizing: border-box;
  margin-top: 26rpx;
  font-size: 25rpx;
  padding: 10rpx 20rpx;
  background-color: rgba(218, 139, 112, 0.788);
  border-radius: 16rpx;
  position: relative;
}

.body .header .dialog_box .roll {
  width: 670rpx !important;
  height: 30rpx;
  overflow: hidden;
}

.notice_item_style {
  -webkit-animation: marqueeText 5s linear 1s infinite;
  animation: marqueeText 3s linear 1s infinite;
  /* 两个动画连续使用 */
  white-space: nowrap;
}

@keyframes marqueeText {
  from {
    transform: translateY(0%);
    -webkit-transform: translateY(0%);
  }

  to {
    transform: translateY(-100%);
    -webkit-transform: translateY(-100%);
  }
}

@keyframes marqueeText2 {
  from {
    transform: translateY(100%);
    -webkit-transform: translateY(100%);
  }

  to {
    transform: translateY(0%);
    -webkit-transform: translateY(0%);
  }
}

.body .header .arrow {
  width: 30rpx;
  height: 25rpx;
  position: absolute;
  top: 97rpx;
  left: 50rpx;
}

.body .container {
  width: 100vw;
  box-sizing: border-box;
}

.body .container .container_bgd {
  box-sizing: border-box;
  background: linear-gradient(to bottom, #fa6a38, #FFF, #FFF, #FFF, #FFF, #FFF);
  border-radius: 20rpx;
  box-sizing: border-box;
  padding: 20rpx 20rpx 20rpx 20rpx;
}

.body .container .container_bgd .banner .h3 {
  font-size: 34rpx;
  padding-top: 20rpx;
  font-weight: 700;
  color: #000;
}

.body .container .container_bgd .more {
  width: 30rpx;
  height: 30rpx;
}

.body .container .container_bgd .swiper {
  color: #000;
  margin-top: 20rpx;
  padding: 20rpx 20rpx 0 0;
  box-sizing: rpxborder-box;
  overflow: scroll;
}

::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}

.swiper .swiper-box {
  box-sizing: border-box;
  display: flex;
}

.swiper .swiper_item {
  width: 250rpx;
  border: 1rpx solid #e2e0e0;
  padding: 14rpx;
}

.swiper .swiper_item .swiper_img {
  width: 250rpx;
  height: 250rpx;
}

.swiper .swiper_item .swiper_img-describe .time {
  font-size: 24rpx;
  color: #a7a0a0;
}

.swiper .swiper_item .swiper_img-describe .title {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  -o-text-overflow: ellipsis;
}

.activity_list .title {
  color: #000 !important;
  font-size: 40rpx;
  font-weight: 700;
  text-align: center;
}

.activity_list .activity {
  padding: 20rpx;
  border-radius: 20rpx;
  flex-wrap: wrap;
  gap: 40rpx 0;
}

.activity_list .activity-item {
  width: 320rpx;
  border-radius: 20rpx;
  color: #000;
  box-sizing: border-box;
  background-color: #fff;
}

.activity_list .activity-item .title {
  font-size: 36rpx;
}

.activity_list .activity-item .activity_img {
  width: 320rpx;
  height: 320rpx;
}

.activity_list .btn {
  padding: 6rpx 20rpx;
  color: #fff;
  background: linear-gradient(to right bottom, #f0ddb4, #cf9a53);
  border-radius: 50rpx;
}

.footer {
  padding-bottom: 30rpx;
}

.footer .nav_activity {
  width: 100%;
  background-color: #fff;
  border-radius: 16rpx;
  font-size: 30rpx;
  color: #ccc;
  display: flex;
  align-items: center;
  justify-content: center;
}

.footer .icon_more {
  width: 26rpx;
  height: 26rpx;
}

