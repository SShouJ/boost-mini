.body {
  width: 100vw;
  height: 100vh;
  font-size: 30rpx;
  background-color: #e6e9f0;
  box-sizing: border-box;
}

.body .header {
  height: 300rpx;
  padding: 90rpx 20rpx 0 20rpx;
  box-sizing: border-box;
  background: url('https://636c-cloud1-7ge7nl2m42cee9e9-1316264853.tcb.qcloud.la/banner3.png?sign=108040761f5386965fdae8a790663e39&t=1675764312');
  background-size: 100% 100%;
  background-repeat: no-repeat;
}

.body .header .header_userinfo .left .left_integral {
  font-size: 60rpx;
  color: #fc4b08;
  font-weight: 700;
}

.body .header .header_userinfo .left .icon-more {
  width: 30rpx;
  height: 30rpx;
  margin-top: 20rpx;
}

.body .header .header_userinfo .right {
  background-color: rgba(255, 255, 255, 0.250);
  padding: 20rpx 30rpx;
  border-radius: 50rpx;
}

/* 主要内容部分 */
.body .container {
  width: 100vw;
  height: 100vh;
  overflow: hidden;
}

.fw-600 {
  font-weight: 600;
}

.body .container {
  width: 100%;
}



.body .nav_box {
  width: 100%;
  height: calc(100vh - 330rpx);
}

/* nav列表 */
.nav {
  width: 100% !important;
  padding: 16rpx 0;
  display: flex;
  /* justify-content: space-around; */
  background-color: rgba(255, 255, 255, 0.4);
}

.nav .nav-item {
  min-width: 100rpx !important;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: space-around;
}

/* 横线 */
.nav .nav-line {
  min-width: 50rpx;
  height: 6rpx;
  display: block;
  background: #fc4b08;
}

.cl-red {
  color: #fc4b08;
}

.nav_box-content {
  padding: 0 20rpx;
}

.title {
  width: 100vw;
}

.title image {
  margin: 0 auto;
  width: 303rpx;
  height: 91rpx;
}

.activity {
  box-sizing: border-box;
  flex-wrap: wrap;
  gap: 40rpx 0;
  background-size: 100% 100%;
}

.activity-item {
  width: 320rpx;
  border-radius: 20rpx;
  color: #000;
  box-sizing: border-box;
  border: 1rpx solid #fc4b08;
}

.activity-item .title {
  box-sizing: border-box;
  width: 100%;
  padding: 10rpx 20rpx;
  font-size: 36rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  -o-text-overflow: ellipsis;
}

.activity-item .activity_img {
  width: 316rpx;
  height: 316rpx;
  border-radius: 20rpx 20rpx 0 0;
}

.btn {
  padding: 6rpx 20rpx;
  color: #fff;
  background: linear-gradient(to right bottom, #f0ddb4, #cf9a53);
  border-radius: 50rpx;
}

/* 弹层样式开始 */
.dialog {
  width: 100vw;
  height: 100vh;
  background-color: rgba(24, 24, 24, 0.623);
  position: absolute;
  top: 0;
  left: 0;
}

.dialog .dialog_box {
  width: 600rpx;
  min-height: 400rpx;
  background-color: #fff;
  box-sizing: border-box;
  border-radius: 20rpx;
  position: relative;
}

.dialog .dialog_box .dialog-header {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #ccc;
  text-align: center;
}

.dialog .dialog_box .dialog-container-overflow {
  max-height: 350rpx;
  padding: 20rpx;
  overflow: scroll;
  margin-bottom: 109rpx;
}

.dialog .dialog-footer {
  border-top: 1rpx solid #ccc;
  width: 100%;
  min-height: 70rpx;
  position: absolute;
  bottom: 0 !important;
  padding: 20rpx 0;
}

.dialog .dialog-footer .dialog-ok,
.dialog-no {
  width: 160rpx !important;
  padding: 10rpx 0;
  display: inline-block;
  color: #fff;
  border-radius: 15rpx;
}

.dialog .dialog-footer .dialog-ok {
  background-color: #f53535;
}

.dialog .dialog-footer .dialog-no {
  background-color: #bdb9b9;
}

.dialog-ok_hover {
  background-color: #f35252 !important;
}

.dialog-no_hover {
  background-color: #d3cdcd !important;
}

/* 弹层样式结束 */